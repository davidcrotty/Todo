<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">
            <RelativeLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/time_icon"
                    android:src="@drawable/inbox_icon"
                    android:paddingTop="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_toRightOf="@id/time_icon"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Date"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Time"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/date_options_strip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/ColorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="8dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:src="@drawable/notifications_white"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="16dp"/>

                        <ImageView
                            android:src="@drawable/add_white"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                    </LinearLayout>
                </RelativeLayout>

                <View android:layout_above="@id/date_options_strip"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/vertical_gradient"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">
            <RelativeLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/checkbox_icon"
                    android:src="@drawable/inbox_icon"
                    android:paddingTop="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_toRightOf="@id/checkbox_icon"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Checklist"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/date_options_strip3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/ColorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="8dp">

                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/add_white"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <ImageView
                        android:id="@+id/checkbox_icon_blank"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/check_box_outline_white"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <TextView
                        android:layout_toRightOf="@id/checkbox_icon_blank"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/white"
                        android:text="1/12"/>

                </RelativeLayout>

                <View android:layout_above="@id/date_options_strip3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/vertical_gradient"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">
            <RelativeLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/comments_logo"
                    android:src="@drawable/inbox_icon"
                    android:paddingTop="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_toRightOf="@id/comments_logo"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Comments"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/comments_options_strip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/ColorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="8dp">

                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/add_white"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <ImageView
                        android:id="@+id/comments_icon"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/comment_white_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <TextView
                        android:layout_toRightOf="@id/comments_icon"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@android:color/white"
                        android:text="12"/>

                </RelativeLayout>

                <View android:layout_above="@id/comments_options_strip"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/vertical_gradient"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>