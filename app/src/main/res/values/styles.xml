<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="NotesLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">#009688</item>

        <item name="colorAccent">#26A69A</item>
        <item name="colorControlNormal">#26A69A</item>
        <item name="colorControlHighlight">#26A69A</item>
        <item name="colorControlActivated">#009688</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.Theme.AppCompat.Light.DarkActionBar"/>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="android:textSize">24sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#26A69A</item>
        <item name="colorControlNormal">#26A69A</item>
        <item name="colorControlActivated">#009688</item>
    </style>
</resources>
