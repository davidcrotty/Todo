<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="NotesLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">#009688</item>

        <item name="colorAccent">#26A69A</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="AppThemeNoActionBar.Transparent" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@color/mdtp_white</item>
        <item name="android:statusBarColor">@color/add_activity_status_bar</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="AppThemeNoActionBar.Green" parent="AppThemeNoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_ripple</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_keyboard_backspace_white_24dp</item>

        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.Theme.AppCompat.Light.DarkActionBar"/>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">24sp</item>

        <item name="colorAccent">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:textColorPrimary">#333333</item>
        <item name="background">@color/flat_blue</item>
        <item name="height">?attr/actionBarSize</item>
    </style>

    <!-- Override to allow light toolbar popout menu with white overflow for custom light background-->
    <style name="TaskList.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow">
        <item name="android:src">@drawable/overflow_white</item>
    </style>
</resources>
