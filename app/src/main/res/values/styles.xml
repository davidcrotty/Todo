<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="NotesLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">#009688</item>

        <item name="colorAccent">#26A69A</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="PickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange_ripple</item>

        <item name="android:datePickerStyle">@style/PickerStyle</item>
        <item name="android:colorAccent">@color/orange_ripple</item>
    </style>

    <style name="PickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_ripple</item>

        <item name="android:headerBackground">@color/orange</item>
        <item name="android:calendarTextColor">@color/orange_ripple</item>
        <item name="android:dayOfWeekBackground">@android:color/white</item>
        <item name="android:yearListSelectorColor">@color/orange_ripple</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:minDate">01/01/2000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.Theme.AppCompat.Light.DarkActionBar"/>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">24sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>
</resources>
